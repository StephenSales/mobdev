<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardEventVertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:layout_weight="1"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="15dp"
    app:cardElevation="10dp"
    app:cardMaxElevation="12dp"
    tools:context=".event.EventCardHorizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/layoutEditProfile"
            android:layout_width="0dp"
            android:layout_height="170dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/rock3" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtEventName"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginTop="20dp"
                android:paddingHorizontal="10dp"
                android:text="Event Name"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtEventLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:paddingHorizontal="10dp"
                android:text="Event Location"
                android:textColor="#2B2849"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/txtEventDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="20dp"
                android:paddingHorizontal="10dp"
                android:text="Event Date"
                android:textColor="#2B2849"
                android:textSize="13sp" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/btnBookmarkEvent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="20dp"
            android:layout_weight="0.1"
            android:background="@color/white"
            android:paddingTop="20dp"
            android:src="@drawable/baseline_bookmark_30_gray" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
